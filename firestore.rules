// Firestore Security Rules for Rehab Hub
// These rules should be applied in the Firebase Console
// Updated: October 26, 2025 - Added support for new dashboard and personalized plan features

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // EXISTING RULES (Keep your current features)
    // ==========================================
    
    // Users can only access their own profile data
    match /rehab-users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own exercise sessions
    match /exercise-sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Users can only access their own progress data
    match /user-progress/{progressId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Public read access to exercise templates (if needed)
    match /exercises/{exerciseId} {
      allow read: if true;
      allow write: if false; // Only admins should modify exercises
    }
    
    // ==========================================
    // NEW RULES (For dashboard and personalized plans)
    // ==========================================
    
    // Users can access all their own data in their user document and subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Specifically for dashboard data (redundant but explicit)
    match /users/{userId}/dashboard/data {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Exercise completions by date
    match /users/{userId}/completions/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Program metadata (start dates, etc)
    match /users/{userId}/program/metadata {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
